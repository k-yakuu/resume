{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
  <main>
    <section>
          {{> title data='Work History' big=true}}
      <div>
        <ul>
          {{#each work}}
            <li>
              <div>{{position}}</div>
              
              <br>
              
              <div>{{duration.from}} -
                {{#if duration.to}}
                  {{duration.to}}
                {{else}}
                 (present)
                {{/if}}
              </div>
              
              <br>
              
              <div>
                {{#if company.url}} 
                  {{> link href=company.url text=company.url blank=true noLine=true}}</div>
                {{else}}
                  <b>{{company.name}}</b>
                {{/if}}
              <br>
              <br>
              
              <div>
                <strong>Projects: {{projectAmount}}</strong>
              </div>

              <br>

              <ul>
                {{#each projects}}
                <li>
                  <div>{{> link href=projects.url text=name blank=true noLine=true}}</div>
                  <br>
                  <div>
                    <p>
                      {{about}}
                    </p>
                  </div>
                  <br>
                  <div>
                    <em>Project Stacks</em> ({{stackAmount}})
                  </div>
                  <br>
                  <div>
                    <ul>
                      {{#each stack}}
                      <li>{{name}}</li>
                      {{/each}}
                    </ul>
                  </div>
                  <br>
                  <div>
                    <em>
                      Project Awards 
                    </em>
                  </div>
                  <br>
                  <div>
                    <ul>
                      {{#each awards}}
                        <li>{{name}}</li>
                        <br>
                      {{/each}}
                    </ul>
                  </div>
                </li>  
                {{/each}}
              </ul>
            </li>
            <br>
          {{/each}}
        </ul>
      </div>
    </section>
  </main>
  {{/with}}
</div>

    
        

