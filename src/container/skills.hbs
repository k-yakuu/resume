<div>
  {{#with main}}
  <main>
    <section>
      {{> title data='All Skills' big=true}}
      <ul>
        {{#each skills}}
          <li>
            {{name}}:
            {{#if points includeZero=true}} [{{points}}] {{/if}}
            {{#if isTop}} (*Top) {{/if}}

            {{#unless points includeZero=true}} (unavailable) {{/unless}}

            {{#unless points}} 
              {{#if points includeZero=true}} 
                (in progress) 
              {{/if}}
            {{/unless}}
          </li>  
        {{/each}}
      </ul>
    </section>

    <section>
      {{> title data='My Hobbies'}}
      <ol>
        {{#each hobbies}}
          <li>
            {{name}}:
            {{#if isMain}}
              (favorite)
            {{/if}}
          </li>  
        {{/each}}
      </ol>
    </section>
  </main>
  {{/with}}
</div>

